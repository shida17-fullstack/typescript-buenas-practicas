{
  "compilerOptions": {
    "target": "es6",                                
    "module": "commonjs",                            
    "strict": true,                                  
    "esModuleInterop": true,                         
    "outDir": "./dist",                              
    "rootDir": "./src",                              
    "forceConsistentCasingInFileNames": true,        
    "skipLibCheck": true                             
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]                    
}
